@using MEBSİS.Areas.Admin.Models
@model StatModel
@{
    ViewBag.Title = "Stat";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@*
    #00E093
    #5EFC8D
    #61D095
    #73E2A7
    #93EFCA
*@
    
    <div class="row ">
        <br><br>
        <div class="alert alert-success" style="margin:0px 25px" role="alert">
            <h4>Sistemde kayıtlı olan mezun sayısı: @Model.NumberofGraduateCount</h4>
        </div>
        <br>
        <div class="alert alert-success" style="margin:0px 25px" role="alert">
            <h4>Sisyemde kayıtlı olan firma sayısı: @Model.NumberofCompanyCount</h4>
        </div>

        <br><br><br>
        <div class="alert alert-info" role="alert" style="margin:0px 25px">
            En çok mezun çalışan 5 firma.
        </div>
        <table class="table table-striped table-responsive-md btn-table text-center " style="margin:0px 25px">

            <thead class="text-center">
                <tr class="text-center">

                    <th class="text-center">Firma </th>
                    <th class="text-center">Çalışan Sayısı</th>
                    <th class="text-center">Çalışma Süresi</th>

                </tr>
            </thead>

            <tbody class="text-center">
                @for (int i = 0; i < 5; i++)
                {
                    <tr class="text-center">
                        <th scope="row" class="text-center">@Model.companylist[i].company_name</th>
                        <td class="text-center"> @Model.companylist[i].numberofgraduate  </td>
                        <td class="text-center"> @(Model.companylist[i].GraduateWorkRank.Year - 1) yıl @(Model.companylist[i].GraduateWorkRank.Month - 1) ay @(Model.companylist[i].GraduateWorkRank.Day - 1) gün   </td>
                    </tr>

                }


            </tbody>
        </table>
        <br>
        <br>

        <div class="alert alert-success" style="margin:0px 25px" role="alert">
            <h4>Öğrencilerin ortalama ortalaması :) @Model.avgOfGraduate.ToString()[0]@Model.avgOfGraduate.ToString()[1]@Model.avgOfGraduate.ToString()[2]@Model.avgOfGraduate.ToString()[3]</h4>
        </div>

    </div>


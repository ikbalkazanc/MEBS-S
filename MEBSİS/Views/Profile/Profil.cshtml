                    <li><span class="glyphicon glyphicon-map-marker"></span> @Model.modelX.graduate_city / @Model.modelX.graduate_country </li>
                    <li><span class="glyphicon glyphicon-phone"></span> @Model.modelX.graduate_phone</li>
                    <li><span class="glyphicon glyphicon-envelope"></span>@Model.modelX.graduate_mail</li>
                    <li>
                        <br>
                        @if (!onself)
                        {
                            if (userisFollower)
                            {
                                <div class="btn  btn-success" style="margin-top:20px;">
                                    <span class="glyphicon glyphicon-plus"></span>
                                    @Html.ActionLink("Takit Et", "follow", "Profile", new { area = "", grad_id = Model.modelX.graduate_id }, new { style = "width:100px;height:45px;" })
                                </div>
                            }
                            else
                            {
                                <div class="btn  btn-danger" style="margin-top:20px;">
                                    <span class="glyphicon glyphicon-minus"></span>
                                    @Html.ActionLink("Takipten Çık", "unfollow", "Profile", new { area = "", grad_id = Model.modelX.graduate_id }, new { style = "width:100px;height:45px;" })
                                </div>
                            }
                        }

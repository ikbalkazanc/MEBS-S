@using MEBSİS.Models
@using Entities.Databases
@using Postgresql.Manager;
@using Postgresql.Manager.Managers;
@model HomeViewModel<GraduateDB>

@{
    GraduateManager graduatemanager = GraduateManager.CreateAsGraduateManager();
    SelectionList selection = new SelectionList();
    bool onself = false;


    if (Model.userx.id == Model.modelX.graduate_id)
    {
        onself = true;
    }

    GraduateDB user = new GraduateDB();

    if (User.Identity.Name != "")
    {
        user = graduatemanager.getID(Int32.Parse(User.Identity.Name));

    }
    bool userisFollower = false;
    var ptt = Model.modelX.graduate_followers.IndexOf(user.graduate_id);
    if (ptt == -1)
    {
        userisFollower = true;
    }

    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

